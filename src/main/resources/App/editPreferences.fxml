<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="App.editPreferencesController" spacing="10" alignment="CENTER" prefWidth="800" prefHeight="600" stylesheets="@styles.css">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    <Label text="Select your preferences:" styleClass="label" />
    <CheckBox fx:id="chkSports" text="Sports" styleClass="check-box" />
    <CheckBox fx:id="chkTechnology" text="Technology" styleClass="check-box" />
    <CheckBox fx:id="chkPolitics" text="Politics" styleClass="check-box" />
    <CheckBox fx:id="chkEntertainment" text="Entertainment" styleClass="check-box" />
    <CheckBox fx:id="chkHealth" text="Health" styleClass="check-box" />
    <CheckBox fx:id="chkAI" text="AI" styleClass="check-box" />
    <Button text="Save Preferences" onAction="#handleSavePreferences" styleClass="button" />
</VBox>
