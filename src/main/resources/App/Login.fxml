<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefHeight="600" prefWidth="800" stylesheets="@styles.css" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="App.LoginController">
    <padding><Insets bottom="40" left="40" right="40" top="40" /></padding>

    <!-- Username -->
    <Label styleClass="label" text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="username" styleClass="text-area" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <!-- Password -->
    <Label styleClass="label" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <PasswordField fx:id="password" styleClass="text-area" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <!-- Login Button -->
    <Button onAction="#handleLogin" prefHeight="38.0" prefWidth="205.0" styleClass="button" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="6">
      <font>
         <Font size="25.0" />
      </font>
      <cursor>
         <Cursor fx:constant="OPEN_HAND" />
      </cursor>
      <graphic>
         <AmbientLight color="CHARTREUSE" lightOn="true" />
      </graphic></Button>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
      <RowConstraints maxHeight="36.80000000000001" minHeight="36.80000000000001" prefHeight="36.80000000000001" />
   </rowConstraints>
</GridPane>
