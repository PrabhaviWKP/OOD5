<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600" prefWidth="800" spacing="10" stylesheets="@styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="App.ArticleContentController">
    <Label fx:id="titleLabel" prefHeight="22.0" prefWidth="69.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Content" />
    <TextArea fx:id="contentTextArea" editable="false" styleClass="text-area" wrapText="true" />
    <Button fx:id="skipButton" onAction="#handleSkip" styleClass="button" text="Skip" />
    <Button fx:id="likeButton" onAction="#handleLike" styleClass="button" text="Like" />
</VBox>
